<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#404CCF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvNomeBaralho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Baralho"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvDescricaoBaralho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do baralho"
                android:textSize="14sp"
                android:textColor="#E6FFFFFF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIniciarQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Quiz"
            android:textColor="#404CCF"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#FFFFFF"
            app:rippleColor="#DADCFF"
            android:elevation="0dp"
            app:elevation="0dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>